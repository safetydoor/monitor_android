<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@drawable/remind"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_wait_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wait_connection" />

    <ImageView
        android:id="@+id/anim_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_wait_connection"
        android:layout_centerHorizontal="true"
        android:src="@drawable/animation_loading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anim_wait"
        android:layout_centerHorizontal="true"
        android:text="@string/wait_connection_wifi"
        android:textColor="@color/text_color_black" />

</RelativeLayout>